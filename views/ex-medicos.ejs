<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Ex-Médicos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <div class="container">
    <h2 class="mb-4">Ex-Médicos da Clínica</h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Nome</th>
          <th>CRM</th>
          <th>Especialidade</th>
        </tr>
      </thead>
      <tbody>
        <% medicos.forEach(medico => { %>
          <tr>
            <td><%= medico.nome %></td>
            <td><%= medico.crm %></td>
            <td><%= medico.especialidade %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <a href="/medicos" class="btn btn-success">Voltar para médicos ativos</a> <!-- Alterado para verde -->
  </div>
</body>
</html>
